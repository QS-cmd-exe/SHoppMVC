
@model PagedList.IPagedList<SHoppMVC.Models.goodsType>
@using PagedList.Mvc;

@{
    Layout = null;
    ViewBag.Title = "商品类别管理";
    ViewBag.nav = "商品类别管理";
}
<link rel="stylesheet" href="https://www.jq22.com/jquery/bootstrap-4.2.1.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/fontastic.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/style.default.css" id="theme-stylesheet">
@*页面样式 *@
<link rel="stylesheet" href="https://www.jq22.com/jquery/font-awesome.4.7.0.css">
<link href="~/Areas/Admin/content/css/button/component.css" rel="stylesheet" />
<link href="~/Areas/Admin/content/css/button/hoverStyle.css" rel="stylesheet" />
<div class="progress-button">
    <button type="submit" id="search">@Html.ActionLink("导出", "excelout")</button>
</div>
<table class="table">
    <tr>
        <th>
            类别名称
        </th>
        <th>
            是否可用
        </th>
        <th>操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.typeNarme)
            </td>
            <td>
                @if (item.enabled == 1)
                {
                    <p>可用</p>
                }
                else
                {
                    <p>不可用</p>
                }
            </td>
            <td>
                @Html.ActionLink("  ", "ShopTyeManageAdd",null,new { @class = "fa fa-plus", @style = "font-size:18px;" })
                @Html.ActionLink("  ", "ShopTyeManageUpdate",null, new { id = item.ID },new { @class = "fa fa-pencil-square-o", @style = "font-size:18px;" })
                @Html.ActionLink("  ", "ShopTyeManageDelete",null, new { id = item.ID }, new { onclick = "return confirm('确定要删除吗？')", @class = "fa fa-times", @style = "font-size:18px;" })
                @Html.ActionLink("  ", "ShopTyeManageSee",null, new { id = item.ID },new { @class = "fa fa-file-text-o", @style = "font-size:18px;" })
            </td>
        </tr>
    }

</table>
 共 @Model.PageCount 页，当前 @Model.PageNumber 页 @Html.PagedListPager(Model, pagenum => Url.Action("ShopTyeManage", new { pagenum }))
<script src="https://www.jq22.com/jquery/jquery-1.10.2.js"></script>
<script src="https://www.jq22.com/jquery/bootstrap-4.2.1.js"></script>
<script src="~/Areas/Admin/content/js/front.js"></script>
