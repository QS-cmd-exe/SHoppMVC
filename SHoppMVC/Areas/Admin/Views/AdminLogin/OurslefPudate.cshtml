@model SHoppMVC.Models.AdminInfo
@{
    Layout = null;
    ViewBag.Title = "OurslefPudate";
}

<link rel="stylesheet" href="https://www.jq22.com/jquery/bootstrap-4.2.1.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/fontastic.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/style.default.css" id="theme-stylesheet">
<style>
    .DropList {
        width: 358px;
        height: 40px;
    }
</style>
<form enctype="multipart/form-data" ID="form1" method="post" action="OurslefPudate">
    <table class="table table-striped table-hover" style="width:1200px;">
        <tr>
            <td>
                头像

            </td>
            <td colspan="2">
                @if (Model.img == null)
                {
                    <img width="40" height="40" src="" alt="" />
                }
                else
                {
                    <img width="40" height="40" src="@Url.Content(Model.img)" alt="" />
                    @Html.Hidden("head", @Model.img)}
            </td>
            <td>
                <input type="file" value="上传头像" name="fileImg" class="btn btn-primary" />
            </td>
        </tr>
        <tr>
            <td>
                ID
            </td>
            <td>
                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </td>
            <td>
                用户编号
            </td>
            <td>
                @Html.EditorFor(model => model.userCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.userCode, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                用户名
            </td>
            <td>
                @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
            </td>
            <td>
                真实姓名
            </td>

            <td>
                @Html.EditorFor(model => model.realName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.realName, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                密码
            </td>

            <td>
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </td>
            <td>
                电话
            </td>

            <td>
                @Html.EditorFor(model => model.telephone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.telephone, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td>
                邮箱
            </td>

            <td>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </td>
            <td>
                登陆状态
            </td>

            <td>
                @Html.DropDownList("Sex",null,new { @class= "DropList" })
            </td>
        </tr>

        <tr>
            <td>
                角色属性
            </td>

            <td>
                @Html.DropDownList("Type", null, new { @class = "DropList" })
            </td>
            <td>
                备注
            </td>

            <td>
                @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
            </td>
        </tr>

        <tr>
            <td colspan="2">
                <input type="submit" class="btn btn-primary" value="修改" />
            </td>
            <td colspan="2">
                <input type="button" class="btn btn-primary" value="取消" onclick="javascript:history.go(-1);" />
            </td>
        </tr>

    </table>
</form>
<script src="https://www.jq22.com/jquery/jquery-1.10.2.js"></script>
<script src="https://www.jq22.com/jquery/bootstrap-4.2.1.js"></script>
<script src="~/Areas/Admin/content/js/front.js"></script>


