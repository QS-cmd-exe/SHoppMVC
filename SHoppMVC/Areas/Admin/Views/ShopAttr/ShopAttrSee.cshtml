@model SHoppMVC.Models.attribute


@{
    Layout = null;
    ViewBag.Title = "ShopManageupdate";
    ViewBag.nav = "商品属性管理>商品属性管理的查看";
}
<link rel="stylesheet" href="https://www.jq22.com/jquery/bootstrap-4.2.1.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/fontastic.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/style.default.css" id="theme-stylesheet">
@* 按钮的样式 *@
<link href="~/Areas/Admin/content/css/button/component.css" rel="stylesheet" />
<style>
    .tdwidth {
        width: 140px;
    }

    tr {
        height: 50px;
    }
        .DropList {
        width: 358px;
        height: 40px;
    }
</style>
<div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <br /><br /><br />
                <h3 style="border-bottom:2px solid #33b35A;padding-bottom:10px;">商品属性详情</h3>

                <table class="table" style="color:black;font-size:20px;margin-top:6%;">
                    <tr style="background-color:#f9f9f9;">
                        <td class="tdwidth">@Html.DisplayName("属性名称:")</td>
                        <td style="width:190px;"> @Html.DisplayFor(model => model.attrName)</td>
                        <td class="tdwidth">
                            @Html.DisplayName("属性值:")
                        </td>
                        <td style="width:190px;">  @Html.DisplayFor(model => model.attrValues)</td>

                        <td class="tdwidth">@Html.DisplayName("是否多选:")</td>
                        <td style="width:170px;">
                            @if (Model.attrType == 0)
                            {
                                <p>不用多选</p>
                            }
                            @if (Model.attrType == 1)
            {
                                <p>可以多选</p>
                            }
                        </td>


                    </tr>
                    <tr>

                        <td class="tdwidth">
                            @Html.DisplayName(" 是否检索:")
                        </td>
                        <td>
                            @if (Model.attrIndex == 0)
                            {
                                <p>不需要检索</p>
                            }
                            @if (Model.attrIndex == 1)
            {
                                <p>关键字检索</p>
                            }
                            @if (Model.attrIndex == 2)
            {
                                <p>范围检索</p>
                            }
                        </td>

                        <td class="tdwidth">
                            @Html.DisplayName("属性排序:")
                        </td>
                        <td>
                                @Html.DisplayFor(model => model.sortOrder)
                      

                        </td>
                        <td class="tdwidth">
                            @Html.DisplayName("是否关联:")
                        </td>
                        <td>
                            @if (Model.is_linked == 0)
                            {
                                <p>不用关联</p>
                            }
                            @if (Model.is_linked == 1)
            {
                                <p>需要关联</p>
                            }
                        </td>



                    </tr>
                    <tr>

                        <td class="tdwidth">@Html.DisplayName(" 是否删除:") </td>
                        <td style="width:170px;">
                            @if (Model.isDelete == 0)
                            {
                                <p>没有删除</p>
                            }
                            @if (Model.isDelete == 1)
            {
                                <p>已经删除</p>
                            }
                        </td>

                    </tr>


                </table>
            </div>
        </div>



    </div>
</div>

<div style="margin-left:17%;text-decoration:none;">
    <div class="progress-button">
        <button type="submit" id="search">@Html.ActionLink("返回", "ShopAttr")</button>
    </div>
    @*@Html.ActionLink(" ", "Index", null, new { @class = "fa fa-arrow-left", @style = "font-size:40px;" })*@
</div>

<script src="https://www.jq22.com/jquery/jquery-1.10.2.js"></script>
<script src="https://www.jq22.com/jquery/bootstrap-4.2.1.js"></script>
<script src="~/Areas/Admin/content/js/front.js"></script>
