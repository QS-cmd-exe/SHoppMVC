@model SHoppMVC.Models.attribute


@{
    Layout = null;
    ViewBag.Title = "ShopManageupdate";
    ViewBag.nav = "商品属性管理>商品属性管理的新增";
}
<link rel="stylesheet" href="https://www.jq22.com/jquery/bootstrap-4.2.1.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/fontastic.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/style.default.css" id="theme-stylesheet">

<style>
    .DropList {
        width: 358px;
        height: 40px;
    }

    .y {
        border: 0px;
        border-bottom: 1px solid #33b257;
        margin-bottom: 10px;
        margin-top: 10px;
        /*background-color: #F9f9f9;*/
    }

    .mainh {
        height: 90%;
        border: 2px solid lightgray;
        margin-top: 30px;
        overflow-x: hidden;
        overflow-y: hidden;
        /*background-color: #F9f9f9;*/
        /*padding:0px;*/
    }

    .bodyh {
        margin-top: 50px;
        /*margin-bottom:50px;*/
    }
</style>

@using (Html.BeginForm())
{

    <div class="container mainh">
        <div class="row" style="height:50px; background-color:#F9f9f9"></div>
        <div class="row  bodyh">
            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                属性名称 ：@Html.TextBox("attrname", null, new { @placeholder = "请输入属性名称", @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6">
                属性值 ：@Html.TextBox("attrvalues",null,new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                是否多选 ：@Html.DropDownList("attrType", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6">
                检索索引  ：@Html.DropDownList("attrIndex", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                排  序：@Html.TextBox("order", null, new { @class = "form-control y" })
            </div>



            <div class="col-md-3 col-xs-6">
                是否关联 ：@Html.DropDownList("is_linked", null, new { @class = "form-control y" })

            </div>
            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                是否删除 ：@Html.DropDownList("IsDelete", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6" style="text-align:center">
                <input type="submit" class="btn btn-primary" value="确认修改" style="font-size:16px;width:100px;text-align:center" />

            </div>
            <div class="col-md-3 col-xs-6" style="text-align:left">
                <input type="button" class="btn btn-primary" value="取  消" onclick="javascript:history.go(-1);" style="/*margin-left:200px;*/ font-size:16px;width:100px;text-align:center" />
            </div>

            <div class="col-md-3 col-xs-6"></div>

        </div>
    </div>

}
<script>
    //验证  属性名称不能为空
    var attrname = document.getElementById("attrname");
    attrname.onblur = function () {
        if (attrname.value == "") {
            attrname.value = "*商品名称不能为空";
            attrname.style.color = "red";
            attrname.focus();
                return false;
            }
            else {
            //验证  属性名称只能是汉字
                var reg = /^[\u0391-\uFFE5]+$/;
                if (!reg.test(attrname.value)) {
                    attrname.value = "*请输入汉字";
                    attrname.style.color = "red";
                    attrname.focus();
                    return false;
                }
        }
        attrname.style.color = "black";
    }

    //验证属性值只能是数字和字母或者汉字
    var attrvalues = document.getElementById("attrvalues");
    attrvalues.onblur = function () {
        if (attrvalues.value == "") {
            attrvalues.value = "*属性值不能为空";
            attrvalues.style.color = "red";
            attrvalues.focus();
            return false;
        }
        else {
            //验证商品名称只能是数字和字母
            var rr = /^[0-9a-zA-Z]+$/;
            if (!rr.test(attrvalues.value)) {
                attrvalues.value = "只能输入字母或者数字";
                attrvalues.style.color = "red";
                attrvalues.focus();
                return false;
            }
        }
        attrvalues.style.color = "black";
    }



    //验证是否排序只能是数字
    var order = document.getElementById("order");
    order.onblur = function () {
        var ageReg = /^[0-9]+$/;
        if (!ageReg.test(order.value)) {
            order.value = "请输入数字";
            order.style.color = "red";
            order.focus();
            return false;
        }
        order.style.color = "black";
    }

    </script>
<script src="https://www.jq22.com/jquery/jquery-1.10.2.js"></script>
<script src="https://www.jq22.com/jquery/bootstrap-4.2.1.js"></script>
<script src="~/Areas/Admin/content/js/front.js"></script>