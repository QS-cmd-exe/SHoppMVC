@model IEnumerable<SHoppMVC.Models.article>
@{
    Layout = null;
    ViewBag.Title = "Add";
    ViewBag.nav = "文章管理>新增";
}
<link rel="stylesheet" href="https://www.jq22.com/jquery/bootstrap-4.2.1.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/fontastic.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/style.default.css" id="theme-stylesheet">


<style>
    .DropList {
        width: 358px;
        height: 40px;
    }

    .y {
        border: 0px;
        border-bottom: 1px solid #33b257;
        margin-bottom: 10px;
        margin-top: 10px;
        /*background-color: #F9f9f9;*/
    }

    .mainh {
        height: 90%;
        border: 2px solid lightgray;
        margin-top: 30px;
        overflow-x: hidden;
        overflow-y: hidden;
        /*background-color: #F9f9f9;*/
        /*padding:0px;*/
    }

    .bodyh {
        margin-top: 50px;
        /*margin-bottom:50px;*/
    }
</style>

@using (Html.BeginForm())
{
    <div class="container mainh">
        <div class="row" style="height:50px; background-color:#F9f9f9"></div>
        <div class="row  bodyh">
            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                发表人 ：@Html.TextBox("Name",null,new {@class= "form-control y"})
            </div>
            <div class="col-md-3 col-xs-6">
                文章主题 ：@Html.TextBox("subject", null,new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                文章内容：@Html.TextBox("content", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6">
                状态 ：@Html.DropDownList("sex", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>



            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6" style="text-align:center">
                <input type="submit" class="btn btn-primary" value="确认修改" style="font-size:16px;width:100px;text-align:center" />

            </div>
            <div class="col-md-3 col-xs-6" style="text-align:left">
                <input type="button" class="btn btn-primary" value="取  消" onclick="javascript:history.go(-1);" style=" font-size:16px;width:100px;text-align:center" />
            </div>

            <div class="col-md-3 col-xs-6"></div>
        </div>

    </div>
}

<script src="https://www.jq22.com/jquery/jquery-1.10.2.js"></script>
<script src="https://www.jq22.com/jquery/bootstrap-4.2.1.js"></script>
<script src="~/Areas/Admin/content/js/front.js"></script>
<script>
        //验证发表人不能为空
    var Name = document.getElementById("Name");
        Name.onblur = function () {
            if (Name.value == "") {
                Name.value = content;
                Name.style.color = "red";
                Name.focus();
                return false;
            }
            else {
                //验证发表人只能是汉字
                var reg = /^[\u0391-\uFFE5]+$/;
                if (!reg.test(Name.value)) {
                    Name.value = content;
                    Name.style.color = "red";
                    Name.focus();
                    return false;
                }
            }
            Name.style.color = "black";
        }



    //验证发表人不能为空
    var Name = document.getElementById("Name");
    Name.onblur = function () {
        if (Name.value == "") {
            Name.value = "*商品名称不能为空";
            Name.style.color = "red";
            Name.focus();
            return false;
        }
        else {
            //验证发表人只能是汉字
            var reg = /^[\u0391-\uFFE5]+$/;
            if (!reg.test(Name.value)) {
                Name.value = "*请输入汉字";
                Name.style.color = "red";
                Name.focus();
                return false;
            }
        }
        Name.style.color = "black";
    }

    //验证文章主题不能为空
    var subject = document.getElementById("subject");
    subject.onblur = function () {
        if (subject.value == "") {
            subject.value = "*商品名称不能为空";
            subject.style.color = "red";
            subject.focus();
            return false;
        }
        else {
            //验证文章的主题只能是汉字
            var reg = /^[\u0391-\uFFE5]+$/;
            if (!reg.test(subject.value)) {
                subject.value = "*请输入汉字";
                subject.style.color = "red";
                subject.focus();
                return false;
            }
        }
        subject.style.color = "black";
    }

    //验证文章内容不能为空
    var content = document.getElementById("content");
    content.onblur = function () {
        if (content.value == "") {
            content.value = "*商品名称不能为空";
            content.style.color = "red";
            content.focus();
            return false;
        }
        else {
            //验证文章内容只能是汉字
            var reg = /^[\u0391-\uFFE5]+$/;
            if (!reg.test(content.value)) {
                content.value = "*请输入汉字";
                content.style.color = "red";
                content.focus();
                return false;
            }
        }
        content.style.color = "black";
    }
</script>

