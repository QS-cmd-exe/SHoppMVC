@model SHoppMVC.Models.supplier

@{
    Layout = null;
    ViewBag.Title = "Add";
}

<link rel="stylesheet" href="https://www.jq22.com/jquery/bootstrap-4.2.1.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/fontastic.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/style.default.css" id="theme-stylesheet">

<style>
    .DropList {
        width: 254px;
        height: 40px;
    }

    .coloess {
        color: red;
    }

    .y {
        border: 0px;
        border-bottom: 1px solid #33b257;
        margin-bottom: 10px;
        margin-top: 10px;
        /*background-color: #F9f9f9;*/
    }

    .mainh {
        height: 90%;
        border: 2px solid lightgray;
        margin-top: 30px;
        overflow-x: hidden;
        overflow-y: hidden;
        /*background-color: #F9f9f9;*/
        /*padding:0px;*/
    }

    .bodyh {
        margin-top: 50px;
        /*margin-bottom:50px;*/
    }
</style>

@using (Html.BeginForm())
{
    <div class="container mainh">
        <div class="row" style="height:50px; background-color:#F9f9f9"></div>
        <div class="row  bodyh">
            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6">
                供应商名称 ：@Html.TextBox("Name", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6">
                公司名称 ：@Html.TextBox("name", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>


            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                地  址  ：@Html.TextBox("adress", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6">
                电  话 ：@Html.TextBox("tel", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                邮  箱  ：@Html.TextBox("email", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6">
                规  模 ：@Html.TextBox("content", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>


            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                备  注  ：@Html.TextBox("remark", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6"></div>


            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6" style="text-align:center">
                <input type="submit" class="btn btn-primary" value="确认添加" style="font-size:16px;width:100px;text-align:center" />

            </div>
            <div class="col-md-3 col-xs-6" style="text-align:left">
                <input type="button" class="btn btn-primary" value="取  消" onclick="javascript:history.go(-1);" style=" font-size:16px;width:100px;text-align:center" />
            </div>

            <div class="col-md-3 col-xs-6"></div>
        </div>

    </div>
}

<script src="https://www.jq22.com/jquery/jquery-1.10.2.js"></script>
<script src="https://www.jq22.com/jquery/bootstrap-4.2.1.js"></script>
<script src="~/Areas/Admin/content/js/front.js"></script>
<script>
    //验证供应商名称不能为空
    var suppname = document.getElementById("Name");
    suppname.onblur = function () {
        if (suppname.value == "") {
            suppname.value = "*供应商名称不能为空";
            suppname.style.color = "red";
            suppname.focus();
                return false;
            }
            else {
            //验证供应商只能是汉字
                var reg = /^[\u0391-\uFFE5]+$/;
                if (!reg.test(suppname.value)) {
                    suppname.value = "*请输入汉字";
                    suppname.style.color = "red";
                    suppname.focus();
                    return false;
                }
            }
        suppname.style.color = "black";
            }

    //验证公司名称不能为空
    var companyname = document.getElementById("name");
    companyname.onblur = function () {
        if (companyname.value == "") {
            companyname.value = "*公司名称不能为空";
            companyname.style.color = "red";
            companyname.focus();
            return false;
        }
        else {
            //验证公司名称只能是汉字
            var reg = /^[\u0391-\uFFE5]+$/;
            if (!reg.test(companyname.value)) {
                companyname.value = "*请输入汉字";
                companyname.style.color = "red";
                companyname.focus();
                return false;
            }
        }
        companyname.style.color = "black";
    }


    //验证地址不能为空
    var adress = document.getElementById("adress");
    adress.onblur = function () {
        if (adress.value == "") {
            adress.value = "*地址不能为空";
            adress.style.color = "red";
            adress.focus();
            return false;
        }
        else {
            //验证地址只能是汉字
            var reg = /^[\u0391-\uFFE5]+$/;
            if (!reg.test(adress.value)) {
                adress.value = "*请输入汉字";
                adress.style.color = "red";
                adress.focus();
                return false;
            }
        }
        adress.style.color = "black";
    }

        //验证电话号码不能为空
    var tel = document.getElementById("tel");
    tel.onblur = function () {
        if (tel.value == "") {
            tel.value = "*电话不能为空";
            tel.style.color = "red";
            tel.focus();
                return false;
            }
            else {
                //验证电话号码规范
               var ageReg = /^(((13[0-9]{1})|(15[0-9]{1})|(18[0-9]{1}))+\d{8})$/;
               if (!ageReg.test(tel.value)) {
                   tel.value = "*请输入正确的电话格式";
                   tel.style.color = "red";
                   tel.focus();
                    return false;
                }
            }
        tel.style.color = "black";
    }

    //验证邮箱格式
    var Email = document.getElementById("email");
    Email.onblur = function () {
        //验证邮箱格式
        var reg = /^[A-Za-z0-9\u4e00-\u9fa5]+@@[a-zA-Z0-9_-]+(\.[a-zA-Z0-9_-]+)+$/;
        if (!reg.test(Email.value)) {
            Email.value = "*只能正确的邮箱格式";
            Email.style.color = "red";
            Email.focus();
            return false;
        }
        Email.style.color = "black";
    }

    </script>

