@model SHoppMVC.Models.AdminInfo

@{
    Layout = null;
    ViewBag.Title = "QuanXian";
}
<script>
        function GetAllCheckBox(all) {
            var items = document.getElementsByTagName("input");
            for (var i = 0; i < items.length; i++) {
                if (all.checked) {
                    if (items[i].type == "checkbox") {
                        items[i].checked = true;
                    }
                }
                else {
                    if (items[i].type == "checkbox") {
                        items[i].checked = false;
                    }
                }
            }
        }
</script>
<link rel="stylesheet" href="https://www.jq22.com/jquery/bootstrap-4.2.1.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/fontastic.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/style.default.css" id="theme-stylesheet">
@using (Html.BeginForm())
{
<table class="tab-content">
    <input id="checkYse" type="checkbox" onclick="GetAllCheckBox(this)" />:全选
   @for (int i = 0; i < ViewBag.First.Count; i++)
    {
        <tr>
            <td>
                @ViewBag.First[i].ResName
                <table>
                    @for (int j = 0; j < ViewBag.Two.Count; j++)
                    {
                        if (ViewBag.First[i].ResNum == ViewBag.Two[j].ParentNum)
                        {
                            <tr>
                                <td>
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    <input type="checkbox" id="check" name="firstChks" value="@ViewBag.Two[j].ID" /> @ViewBag.Two[j].ResName
                                </td>
                            </tr>
                        }
                    }
                </table>
            </td>
        </tr>
   }
    <tr>
        <td>
            <input type="submit" class="btn btn-primary" value="提交" />
        </td>
        <td>
            <input type="button" class="btn btn-primary" value="取消" onclick="javascript:history.go(-1);" />
        </td>
    </tr>
</table>

}
<script src="https://www.jq22.com/jquery/jquery-1.10.2.js"></script>
<script src="https://www.jq22.com/jquery/bootstrap-4.2.1.js"></script>
<script src="~/Areas/Admin/content/js/front.js"></script>