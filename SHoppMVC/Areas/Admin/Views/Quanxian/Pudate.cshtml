@model SHoppMVC.Models.AdminInfo

@{
    Layout = null;
    ViewBag.Title = "Pudate";
    ViewBag.nav = "权限分配>修改用户信息";
}

<link rel="stylesheet" href="https://www.jq22.com/jquery/bootstrap-4.2.1.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/fontastic.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/style.default.css" id="theme-stylesheet">
<style>
    .DropList {
        width: 358px;
        height: 40px;
    }

    .y {
        border: 0px;
        border-bottom: 1px solid #33b257;
        margin-bottom: 10px;
        margin-top: 10px;
        /*background-color: #F9f9f9;*/
    }

    .mainh {
        height: 90%;
        border: 2px solid lightgray;
        margin-top: 30px;
        overflow-x: hidden;
        overflow-y: hidden;
        /*background-color: #F9f9f9;*/
        /*padding:0px;*/
    }

    .bodyh {
        margin-top: 50px;
        /*margin-bottom:50px;*/
    }
</style>

@using (Html.BeginForm())
{
    <div class="container mainh">
        <div class="row" style="height:50px; background-color:#F9f9f9"></div>
        <div class="row  bodyh">

            <div class="col-md-3 col-xs-6">
                头像 ：@if (Model.img == null)
                {
                    <img width="50" height="50" src="" alt="" class="imgs" />
                }
                else
                {
                    <img width="50" height="50" src="@Url.Content(Model.img)" alt="" class="imgs" />
                    @Html.Hidden("head", @Model.img)
                }
            </div>
            <div class="col-md-3 col-xs-6">
                <input type="file" value="上传头像" name="fileImg" />
            </div>



            <div class="col-md-3 col-xs-6">
                用户编号 ：@Html.EditorFor(model => model.userCode, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.userCode, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6">
                用户名  ：@Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger y" })
            </div>



            <div class="col-md-3 col-xs-6">
                真实姓名 ：@Html.EditorFor(model => model.realName, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.realName, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6">
                密  码  ：@Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger y" })
            </div>

            <div class="col-md-3 col-xs-6">
                电  话：@Html.EditorFor(model => model.telephone, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.telephone, "", new { @class = "text-danger  y" })
            </div>
            <div class="col-md-3 col-xs-6">
                邮  箱  ：@Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger y" })
            </div>


            <div class="col-md-3 col-xs-6">
                登陆状态：@Html.DropDownList("Sex", null, new { @class = "form-control y" })
            </div>
            <div class="col-md-3 col-xs-6">
                角色属性 ：@Html.DropDownList("Type", null, new { @class = "form-control y" })
            </div>

            <div class="col-md-3 col-xs-6">
                备注：@Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger y" })
            </div>

            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6" style="text-align:center">
                <input type="submit" class="btn btn-primary" value="确认修改" style="font-size:16px;width:100px;text-align:center" />

            </div>
            <div class="col-md-3 col-xs-6" style="text-align:left">
                <input type="button" class="btn btn-primary" value="取  消" onclick="javascript:history.go(-1);" style=" font-size:16px;width:100px;text-align:center" />
            </div>

            <div class="col-md-3 col-xs-6"></div>
        </div>

    </div>
}


<script src="https://www.jq22.com/jquery/jquery-1.10.2.js"></script>
<script src="https://www.jq22.com/jquery/bootstrap-4.2.1.js"></script>
<script src="~/Areas/Admin/content/js/front.js"></script>
<script>
    //验证用户名称格式
    var newName = document.getElementById("userName");
    newName.onblur = function () {

        //验证用户名称只能是汉字或者字母
        var reg = /^[\u4e00-\u9fa5]|[a-zA-Z]+$/;
        if (!reg.test(newName.value)) {
            newName.value = "*请输入汉字或者字母";
            newName.style.color = "red";

            newName.focus();
            return false;
        }
        newName.style.color = "black";
    }

    //验证用户名称不能为空
    var UserName = document.getElementById("realName");
    UserName.onblur = function () {

        //验证用户名称只能是汉字或者字母
        var reg = /^[\u4e00-\u9fa5]|[a-zA-Z]+$/;
        if (!reg.test(UserName.value)) {
            UserName.value = "*请输入汉字或者字母";
            UserName.style.color = "red";
            UserName.focus();
            return false;
        }
        UserName.style.color = "black";
    }

    //验证密码不能为空
    var newPwd = document.getElementById("password");
    newPwd.onblur = function () {
        if (newPwd.value == "") {
            newPwd.value = "*密码不能为空";
            newPwd.style.color = "red";
            newPwd.focus();
            return false;
        }
        else {
            //验证用户名称只能是汉字或者字母
            var reg = /^(\w){6,20}$/;
            if (!reg.test(newPwd.value)) {
                newPwd.value = "*只能输入6-20个字母、数字、下划线 ";
                newPwd.style.color = "red";
                newPwd.focus();
                return false;
            }
        }
        newPwd.style.color = "black";
    }


    //验证电话不能为空
    var Tel = document.getElementById("telephone");
    Tel.onblur = function () {
        //验证电话号码
        var reg = /^1[3456789]\d{9}$/;
        if (!reg.test(Tel.value)) {
            Tel.value = "*只能输入正确的电话号码";
            Tel.style.color = "red";

            Tel.focus();
            return false;
        }
        Tel.style.color = "black";
    }
    //验证地址格式
    var Address = document.getElementById("Address");
    Address.onblur = function () {
        //验证地址只能是汉字
        var reg = /[^\a-\z\A-\Z0-9\u4E00-\u9FA5]/g;
        if (!reg.test(Address.value)) {
            Address.value = "*只能输入数字/英文/中文";
            Address.style.color = "red";

            Address.focus();
            return false;
        }
        Address.style.color = "black";
    }




    //验证邮箱格式
    var Email = document.getElementById("Email");
    Email.onblur = function () {
        //验证邮箱格式
        var reg = /^[A-Za-z0-9\u4e00-\u9fa5]+@@[a-zA-Z0-9_-]+(\.[a-zA-Z0-9_-]+)+$/;
        if (!reg.test(Email.value)) {
            Email.value = "*只能正确的邮箱格式";
            Email.style.color = "red";

            Email.focus();
            return false;
        }
        Email.style.color = "black";
    }
</script>