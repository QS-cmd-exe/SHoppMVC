@model IEnumerable<SHoppMVC.Models.AdminInfo>

@{
    Layout = null;
    ViewBag.Title = "权限分配";
    ViewBag.nav = "权限分配";
}
<link rel="stylesheet" href="https://www.jq22.com/jquery/bootstrap-4.2.1.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/fontastic.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/style.default.css" id="theme-stylesheet">
@*页面样式 *@
<link rel="stylesheet" href="https://www.jq22.com/jquery/font-awesome.4.7.0.css">
<link href="~/Areas/Admin/content/css/button/component.css" rel="stylesheet" />
<link href="~/Areas/Admin/content/css/button/hoverStyle.css" rel="stylesheet" />
<style>
    .btnBlue {
        background-color: aquamarine;
        width: 80px;
        border-radius: 20px;
    }
  .imgs{
    width:40px;
    height:40px;
    }
</style>
<script>
    function showDiv() {
        window.open("Add", "iframe1");
        window.close();
    }

</script>
@using (Html.BeginForm())
{
   <span>请输入账号名称: </span>@Html.TextBox("Name", null, new { @placeholder = "请输入账号名称或姓名", @class = "text-danger" })
    <div class="progress-button">
        <button type="submit" id="search">搜 索</button>
    </div>
            <div class="progress-button">
                <button type="submit" id="search">@Html.ActionLink("导出", "excelout")</button>
            </div>
}
<table class="table">
    <tr>
        <th>
            头像
        </th>
        <th>
            用户编号
        </th>
        <th>
            用户名称
        </th>
        <th>
            真实姓名
        </th>
        <th>
            密码
        </th>
        <th>
            电话
        </th>
        <th>
            邮箱
        </th>
        <th>
            创建时间
        </th>
        <th>
            登陆状态
        </th>
        <th>
            角色属性
        </th>
        <th>
            备注
        </th>
        <th>
            操作
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.img == null)
                {
                    <img width="200" height="200" src="" alt="" class="imgs" />
                }
                else
                {
                    <img width="200" height="200" src="@Url.Content(item.img)" alt="" class="imgs" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.realName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createTime)
            </td>
            <td>
                @if (item.state == 2)
                {
                    @Html.Label("正常")
                }
                else
                {
                    @Html.Label("失效")
                }
            </td>
            <td>
                @if (item.roleCode == 1)
                {
                    @Html.Label("管理员")
                }
                else
                {
                    @Html.Label("普通用户")
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
            <td>
                @Html.ActionLink("  ", "Add", null, new { @class = "fa fa-plus", @style = "font-size:18px;" })
                <a href="Pudate?id=@item.ID"  class = "fa fa-pencil-square-o" style = "font-size:18px;" ></a>
                @Html.ActionLink("  ", "Delete",null, new { id = item.ID }, new { @class = "fa fa-times", @style = "font-size:18px;" })
                <a href="QuanXian?id=@item.ID" class="fa fa-user-plus"></a>
            </td>
        </tr>
    }

</table>
<script src="https://www.jq22.com/jquery/jquery-1.10.2.js"></script>
<script src="https://www.jq22.com/jquery/bootstrap-4.2.1.js"></script>
<script src="~/Areas/Admin/content/js/front.js"></script>