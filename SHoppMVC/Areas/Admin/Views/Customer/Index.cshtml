@using (Html.BeginForm())
{
    @Html.TextBox("Name", null, new { @placeholder = "请输入账号名称或姓名", @class = "text-danger" })
    <div class="progress-button">
        <button type="submit" id="search">搜 索</button>
    </div>
    <div class="progress-button">
        <button type="button" id="search">@Html.ActionLink("导出", "excelout")</button>
    </div>
}
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            用户名
        </th>
        <th>
            用户真实姓名
        </th>
        <th>
            登陆密码
        </th>
        <th>
            性别
        </th>
        <th>
            年龄
        </th>
        <th>
            电话
        </th>
        <th>
            邮箱
        </th>
        <th>
            账号创建时间
        </th>
        <th>
            生日
        </th>
        <th>
            地址
        </th>
        <th>
            状态
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Userid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoginName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoginPwd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sex)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegditDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>

            <td>
                @if (item.State == 1)
                {
                    @Html.Label("正常")
                }
                else
                {
                    @Html.Label("失效")
                }
            </td>
            <td>
                <a href="Pudate?id=@item.Userid" class = "fa fa-pencil-square-o" style = "font-size:18px;"> </a>
                @Html.ActionLink("  ", "Delete",null, new { id = item.Userid }, new { onclick = "return confirm('确定要删除吗？')", @class = "fa fa-times", @style = "font-size:18px;" })
            </td>
        </tr>
    }

</table>
