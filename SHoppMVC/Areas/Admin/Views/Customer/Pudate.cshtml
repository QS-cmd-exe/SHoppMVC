@model SHoppMVC.Models.UserInfo

@{
    Layout = null;
    ViewBag.Title = "Pudate";
    ViewBag.nav = "角色管理>修改";
}
<link rel="stylesheet" href="https://www.jq22.com/jquery/bootstrap-4.2.1.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/fontastic.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/style.default.css" id="theme-stylesheet">
<style>
    .DropList {
        width: 358px;
        height: 40px;
    }

    .y {
        border: 0px;
        border-bottom: 1px solid #33b257;
        margin-bottom: 10px;
        margin-top: 10px;
        /*background-color: #F9f9f9;*/
    }

    .mainh {
        height: 90%;
        border: 2px solid lightgray;
        margin-top: 30px;
        overflow-x: hidden;
        overflow-y: hidden;
        /*background-color: #F9f9f9;*/
        /*padding:0px;*/
    }

    .bodyh {
        margin-top: 50px;
        /*margin-bottom:50px;*/
    }
</style>

@using (Html.BeginForm())
{

    <div class="container mainh">
        <div class="row" style="height:50px; background-color:#F9f9f9"></div>
        <div class="row  bodyh">
            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                用户名 ：@Html.EditorFor(model => model.LoginName, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.LoginName, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6">
                真实姓名 ：@Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                密  码 ：@Html.EditorFor(model => model.LoginPwd, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.LoginPwd, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6">
                性  别  ：@Html.DropDownList("sex", null, new { @class = "DropList y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                年 龄 ：@Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6">
                电  话 ：@Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                邮  箱 ： @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6">
                生  日 ：@Html.EditorFor(model => model.BirthDay, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.BirthDay, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                地  址 ：@Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6">
                状  态 ：@Html.DropDownList("Type", null, new { @class = "DropList y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>


            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6" style="text-align:center">
                <input type="submit" class="btn btn-primary" value="确认修改" style="font-size:16px;width:100px;text-align:center" />

            </div>
            <div class="col-md-3 col-xs-6" style="text-align:left">
                <input type="button" class="btn btn-primary" value="取  消" onclick="javascript:history.go(-1);" style="/*margin-left:200px;*/ font-size:16px;width:100px;text-align:center" />
            </div>

            <div class="col-md-3 col-xs-6"></div>

        </div>
    </div>

}

<script src="https://www.jq22.com/jquery/jquery-1.10.2.js"></script>
<script src="https://www.jq22.com/jquery/bootstrap-4.2.1.js"></script>
<script src="~/Areas/Admin/content/js/front.js"></script>
<script>
    //验证用户名称格式
    var newName = document.getElementById("LoginName");
    newName.onblur = function () {

        //验证用户名称只能是汉字或者字母
        var reg = /^[\u4e00-\u9fa5]|[a-zA-Z]+$/;
        if (!reg.test(newName.value)) {
            newName.value = "*用户名称只能是汉字或者字母";
            newName.style.color = "red";
            newName.focus();
            return false;
        }
        newName.style.color = "black";
    }

    //验证用户名称不能为空
    var UserName = document.getElementById("UserName");
    UserName.onblur = function () {

        //验证用户名称只能是汉字或者字母
        var reg = /^[\u4e00-\u9fa5]|[a-zA-Z]+$/;
        if (!reg.test(UserName.value)) {
            UserName.value = "*请输入汉字或者字母";
            UserName.style.color = "red";
            UserName.focus();
            return false;
        }
        UserName.style.color = "black";
    }

    //验证年龄
    var Age = document.getElementById("Age");
    Age.onblur = function () {
        //验证年龄
        var ageReg = /^[0-9]+$/;
        if (!ageReg.test(Age.value)) {
            Age.value = "*请输入数字";
            Age.style.color = "red";
          
            Age.focus();
            return false;

        }
        Age.style.color = "black";
    }


    //验证电话不能为空
    var Tel = document.getElementById("Tel");
    Tel.onblur = function () {
        //验证电话号码
        var reg = /^1[3456789]\d{9}$/;
        if (!reg.test(Tel.value)) {
            Tel.value = "*只能输入正确的电话号码";
            Tel.style.color = "red";

            Tel.focus();
            return false;
        }
        Tel.style.color = "black";
    }
    //验证地址格式
    var Address = document.getElementById("Address");
    Address.onblur = function () {
        //验证地址只能是汉字
        var reg = /[^\a-\z\A-\Z0-9\u4E00-\u9FA5]/g;
        if (!reg.test(Address.value)) {
            Address.value = "*只能输入数字/英文/中文";
            Address.style.color = "red";

            Address.focus();
            return false;
        }
        Address.style.color = "black";
    }

    //验证生日格式
    var BirthDay = document.getElementById("BirthDay");
    BirthDay.onblur = function () {
        //验证日期格式
        var reg = /d{4}-(((0(1|3|5|7|8))|(1(0|2)))(-((0[1-9])|([1-2][0-9])|(3[0-1])))?)|(((0(2|4|6|9))|(11))(-((0[1-9])|([1-2][0-9])|(30)))?)|((02)(-((0[1-9])|([1-2][0-9])))?)/;
        if (!reg.test(BirthDay.value)) {
            BirthDay.value = "*请输入正确的日期格式";
            BirthDay.style.color = "red";

            BirthDay.focus();
            return false;
        }
        BirthDay.style.color = "black";
    }


    //验证邮箱格式
    var Email = document.getElementById("Email");
    Email.onblur = function () {
        //验证邮箱格式
        var reg = /^[A-Za-z0-9\u4e00-\u9fa5]+@@[a-zA-Z0-9_-]+(\.[a-zA-Z0-9_-]+)+$/;
        if (!reg.test(Email.value)) {
            Email.value = "*只能正确的邮箱格式";
            Email.style.color = "red";

            Email.focus();
            return false;
        }
        Email.style.color = "black";
    }
</script>
