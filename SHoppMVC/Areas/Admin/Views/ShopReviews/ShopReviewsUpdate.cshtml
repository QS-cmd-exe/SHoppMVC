@model SHoppMVC.Models.massage


@{
    Layout = null;

    ViewBag.Title = "商品评论管理的修改";
    ViewBag.nav = "商品评论管理>商品评论管理的修改";
}
<link rel="stylesheet" href="https://www.jq22.com/jquery/bootstrap-4.2.1.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/fontastic.css">
<link rel="stylesheet" href="~/Areas/Admin/content/css/style.default.css" id="theme-stylesheet">
<style>
    .DropList {
        width: 358px;
        height: 40px;
    }

    .y {
        border: 0px;
        border-bottom: 1px solid #33b257;
        margin-bottom: 10px;
        margin-top: 10px;
        /*background-color: #F9f9f9;*/
    }

    .mainh {
        height: 90%;
        border: 2px solid lightgray;
        margin-top: 30px;
        overflow-x: hidden;
        overflow-y: hidden;
        /*background-color: #F9f9f9;*/
        /*padding:0px;*/
    }

    .bodyh {
        margin-top: 50px;
        /*margin-bottom:50px;*/
    }
</style>

@using (Html.BeginForm())
{

    <div class="container mainh">
        <div class="row" style="height:50px; background-color:#F9f9f9"></div>
        <div class="row  bodyh">
            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                文章编码 ：@Html.EditorFor(model => model.massageCode, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.massageCode, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6">
                评论人 ：@Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                评论内容 ：@Html.EditorFor(model => model.messageContent, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.messageContent, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6">
                评论时间  ：@Html.EditorFor(model => model.messageTime, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.messageTime, "", new { @class = "text-danger y" })


            </div>
            <div class="col-md-3 col-xs-6"></div>

            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6">
                文章ID ：@Html.EditorFor(model => model.articleId, new { htmlAttributes = new { @class = "form-control y" } })
                @Html.ValidationMessageFor(model => model.articleId, "", new { @class = "text-danger y" })
            </div>
            <div class="col-md-3 col-xs-6">
                是否删除 ：@Html.DropDownList("isDelete", null, new { @class = "DropList y" })
            </div>
            <div class="col-md-3 col-xs-6"></div>


            <div class="col-md-3 col-xs-6"></div>
            <div class="col-md-3 col-xs-6" style="text-align:center">
                <input type="submit" class="btn btn-primary" value="确认修改" style="font-size:16px;width:100px;text-align:center" />

            </div>
            <div class="col-md-3 col-xs-6" style="text-align:left">
                <input type="button" class="btn btn-primary" value="取  消" onclick="javascript:history.go(-1);" style="/*margin-left:200px;*/ font-size:16px;width:100px;text-align:center" />
            </div>

            <div class="col-md-3 col-xs-6"></div>

        </div>
    </div>

}
<script>
    //验证文字编码不能为空
    var massageCode = document.getElementById("massageCode");
    massageCode.onblur = function () {
        if (massageCode.value == "") {
            massageCode.value = "*商品名称不能为空";
            massageCode.style.color = "red";
            massageCode.focus();
                return false;
            }
            else {
                //验证商品名称只能是汉字
                var reg = /^[\u0391-\uFFE5]+$/;
                if (!reg.test(massageCode.value)) {
                    massageCode.value = "*请输入汉字";
                    massageCode.style.color = "red";
                    massageCode.focus();
                    return false;
                }
        }
        massageCode.style.color = "black";
    }

    //验证评论人不能为空
    var userName = document.getElementById("userName");
    userName.onblur = function () {
        if (userName.value == "") {
            userName.value = "*商品名称不能为空";
            userName.style.color = "red";
            userName.focus();
            return false;
        }
        else {
            //验证商品名称只能是汉字
            var reg = /^[\u0391-\uFFE5]+$/;
            if (!reg.test(userName.value)) {
                userName.value = "*请输入汉字";
                userName.style.color = "red";
                userName.focus();
                return false;
            }
        }
        userName.style.color = "black";
    }



    </script>
